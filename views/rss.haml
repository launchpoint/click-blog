%rss{:version=>"2.0"}
  %channel
    %title +APP_NAME
    %link ="http://$subdomain.$domain".view_blog_url()
    -foreach($articles as $article)
      %item
        %title +$article->title
        %link +"http://$subdomain.$domain".view_blog_article_url($article)
        %description +$article->excerpt
